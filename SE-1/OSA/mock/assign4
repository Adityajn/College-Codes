while [ true ]
do
echo "1. Display all terminal devices"
echo "2. Display memory information"
echo "3. Display cpu info"
echo "4. To mount a device"
echo "5. To unmount a device"
echo "6. Exit"
echo "Enter your choice"
read ch

case $ch in
1)
	echo "All terminal Devices"
	lspci
	;;
2)
	echo "Memory Map"
	free -m #also can use less /prac/meminfo
	;;
3)
	echo "processor info"
	cat /proc/cpuinfo
	;;




